{% extends 'base.html.twig' %}

{% block header %}
    {% include '@Chouettes/Default/navbar.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container admin">
    <h1>Citations</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <th>Text</th>
        </tr>
        <tr>
            <td>{{ citation.id }}</td>
            <td>{{ citation.text }}</td>
        </tr>
        </tbody>
    </table>

        <div class="boutons">
            <div class="row">
                <div class="col offset-l3 l2">
                    <a class="waves-effect waves-light btn" href="{{ path('citation_index') }}">Retour</a>
                </div>
                <div class="col l2">
                    <a class="waves-effect waves-light btn" href="{{ path('citation_edit', { 'id': citation.id }) }}">Editer</a>
                </div>
                <div class="col l2">
                    {{ form_start(delete_form) }}<input class="waves-effect waves-light btn" type="submit" value="Effacer">{{ form_end(delete_form) }}
                </div>
            </div>
        </div>
        </div>
{% endblock %}
